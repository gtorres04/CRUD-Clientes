    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/TestDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>RegistrarClientes</servlet-name>
        <servlet-class>com.kometsales.clientes.controladores.RegistrarClientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarClientes</servlet-name>
        <servlet-class>com.kometsales.clientes.controladores.ListarClientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarCliente</servlet-name>
        <servlet-class>com.kometsales.clientes.controladores.ModificarCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarParaModificarCliente</servlet-name>
        <servlet-class>com.kometsales.clientes.controladores.ConsultarParaModificarCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarParaEliminarCliente</servlet-name>
        <servlet-class>com.kometsales.clientes.controladores.ConsultarParaEliminarCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarCliente</servlet-name>
        <servlet-class>com.kometsales.clientes.controladores.EliminarCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrarClientes</servlet-name>
        <url-pattern>/RegistrarClientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarClientes</servlet-name>
        <url-pattern>/ListarClientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarCliente</servlet-name>
        <url-pattern>/ModificarCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarParaModificarCliente</servlet-name>
        <url-pattern>/ConsultarParaModificarCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarParaEliminarCliente</servlet-name>
        <url-pattern>/ConsultarParaEliminarCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarCliente</servlet-name>
        <url-pattern>/EliminarCliente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
